    #toastContainer {
        position: fixed;
        top: 10px;
        right: 10px;
        z-index: 1050; /* Ensure it's on top of other UI elements */
    }

    /* Adjust the Toast visibility and styles */
    #toast {
        transition: all 0.3s ease-in-out;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }



    .doc-id {
