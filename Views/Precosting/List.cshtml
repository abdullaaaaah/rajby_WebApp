@model List<Rajby_web.Models.PreCostingViewModel>

@{
    ViewData["Title"] = "Costing";
}

<!-- Container for Heading and Button -->
<div class="d-flex justify-content-between align-items-center">
    <h4 class="my-4" style="font-size: 2rem; font-weight: bold; background: linear-gradient(to right, #005796, #312b5e); -webkit-background-clip: text; color: transparent;">
        @ViewData["Title"]
    </h4>
    <!-- Accept Costing View Button -->
    <a href="@Url.Action("List", "Accept")" class="btn btn-primary" id="acceptCostingViewBtn">Accept Costing View</a>

</div>
<!-- Display Success or Error Message -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["Message"]
    </div>
}

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet">

<!-- Toastr CSS for Notifications -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">

<!-- Custom CSS for Styling -->
<style>
    th {
        text-align: left;
        border-bottom: 2px solid #000;
    }

    #mytable_wrapper {
        margin-top: 20px;
    }

    tbody tr:nth-child(even) {
        background-color: #f7f7f7;
    }

    tbody tr:hover {
        background-color: #e9ecef;
    }

    .badge {
        font-size: 0.9rem;
        padding: 5px 10px;
    }

    .btn {
        font-size: 1rem;
        padding: 6px 12px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-success:hover, .btn-danger:hover {
            opacity: 0.85;
        }

    .btn-group button {
        margin-right: 5px;
    }

    .table-responsive {
        margin-left: 15px;
        margin-right: 15px;
    }
</style>

<!-- Modal (Bootstrap 5 with vanilla JS API) -->
<div class="modal fade" id="approvalModal" tabindex="-1" aria-labelledby="approvalModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="approvalModalLabel">Approval Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Start Form for Submission -->
                <form id="approvalForm">
                    <div class="form-group" id="priceGroup" style="display: none;">
                        <label for="priceInput">Suggested Price</label>
                        <input type="number" id="priceInput" name="suggestedPrice" class="form-control" placeholder="Enter suggested price">
                    </div>
                    <div class="form-group">
                        <label for="commentSelect">Comment</label>
                        <select id="commentSelect" name="commentsId" class="form-control">
                            <option value="">Select a comment</option>
                            <!-- Comments will be dynamically populated here -->
                        </select>
                    </div>

                    <!-- Hidden fields to store dynamic data -->
                    <input type="hidden" id="costingId" name="costingId" />
                    <input type="hidden" id="action" name="action" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="submitApproval">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover table-bordered table-striped" id="mytable">
            <thead class="thead-light">
                <tr>
                    <th style="width: 15%;">Costing Number</th>
                    <th style="width: 10%;">Date</th>
                    <th style="width: 15%;">Buyer Name</th>
                    <th style="width: 15%;">Article Code</th>
                    <th style="width: 7%;">Min Price</th>
                    <th style="width: 7%;">Sell Price</th>
                    <th style="width: 15%;">Merchandiser</th>
                    <th style="width: 15%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="costing-@item.CostingId">
                        <td>
                            <a href="http://192.168.77.34/Report/Download_PDF?tranId=@item.CostingId" target="_blank">
                                @item.CostingNumber
                            </a>
                        </td>
                        <td>@item.CostingDate.ToString("dd-MM-yyyy")</td>
                        <td>@item.BuyerName</td>
                        <td>@item.ArticleCode</td>
                        <td>$ @item.MinExpectedPrice</td>
                        <td>$ @item.SellPrice</td>
                        <td>@item.CreatedBy</td>
                        <td>
                            @if (item.ApprovalStatus == "Requested")
                            {
                                <div class="btn-group" role="group">
                                    <button class="btn btn-success" onclick="openApprovalModal(@item.CostingId, 'Accept')">Accept</button>
                                    <button class="btn btn-danger" onclick="submitApprovalAction(@item.CostingId, 'Reject')">Reject</button>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<!-- Toastr JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

<!-- Bootstrap JS (ensure to include this) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!-- DataTables Initialization -->
<script>
    $(document).ready(function () {
        var $j = jQuery.noConflict();
        $('#mytable').DataTable({
            responsive: true
        });
    });

    function submitApprovalAction(costingId, action) {
        // Collect data for the action
        var data = {
            costingId: costingId,
            action: action,
            approvedPrice: null, // Not required for "Accept"
            commentsId: null // Not required for "Accept"
        };

        // Send AJAX request to update approval status
        $.ajax({
            url: '@Url.Action("UpdateApprovalStatus", "Precosting")', // Replace "Precosting" if needed
            type: 'POST',
            data: data,
            success: function (response) {
                if (response.success) {
                    toastr.success(response.message); // Notify success

                    // Remove the row from the table
                    $('#costing-' + costingId).fadeOut(500, function () {
                        $(this).remove();
                    });
                } else {
                    toastr.error(response.message); // Notify error from server
                }
            },
            error: function (xhr, status, error) {
                toastr.error('An error occurred: ' + error); // Notify error
            }
        });
    }

    function loadApprovalComments() {
        $.ajax({
            url: '@Url.Action("GetApprovalComments", "Precosting")', // Replace "Precosting" with your controller name if different
            type: 'GET',
            success: function (comments) {
                var $commentSelect = $('#commentSelect'); // Select the dropdown
                $commentSelect.empty(); // Clear previous options
                $commentSelect.append('<option value="">Select a comment</option>'); // Add default option

                // Append fetched comments to the dropdown
                comments.forEach(function (comment) {
                    $commentSelect.append(`<option value="${comment.setsetupId}">${comment.setsetupName}</option>`);
                });
            },
            error: function (xhr, status, error) {
                toastr.error('Failed to load comments: ' + error); // Notify on error
            }
        });
    }

    // Function to open the approval modal
    function openApprovalModal(costingId, action) {
        loadApprovalComments(); // Load comments dynamically before opening the modal

        $('#commentSelect').val(''); // Reset comment selection
        $('#priceInput').val(''); // Reset price input
        $('#priceGroup').hide(); // Hide price input by default

        if (action === 'Reject') {
            $('#priceGroup').show(); // Show price input if rejecting
        }

        $('#costingId').val(costingId); // Set the Costing ID
        $('#action').val(action); // Set the action (Accept/Reject)

        // Open modal
        var approvalModal = new bootstrap.Modal(document.getElementById('approvalModal'));
        approvalModal.show();
    }

    // Handle form submission for approval modal
    $('#submitApproval').click(function () {
        var data = {
            costingId: $('#costingId').val(),
            action: $('#action').val(),
            approvedPrice: $('#priceInput').val(),
            commentsId: $('#commentSelect').val()
        };

        // Send approval data to the server via AJAX
        $.ajax({
            url: '@Url.Action("UpdateApprovalStatus", "Precosting")', // Replace "Precosting" with your controller name if different
            type: 'POST',
            data: data,
            success: function (response) {
                if (response.success) {
                    toastr.success(response.message);
                    location.reload(); // Reload page after submission
                } else {
                    toastr.error(response.message);
                }
            },
            error: function (xhr, status, error) {
                toastr.error('An error occurred: ' + error);
            }
        });
    });

    // Add click handler for the "Accept Costing View" button
    $('#acceptCostingViewBtn').click(function () {
        // Make an AJAX call to the "Accept" action in the controller
        $.ajax({
            url: '@Url.Action("List", "Accept")', // Replace with the correct controller/action
            type: 'POST',
            success: function (response) {
                if (response.success) {
                    toastr.success(response.message);
                } else {
                    toastr.error(response.message);
                }
            },
            error: function (xhr, status, error) {
                toastr.error('An error occurred: ' + error);
            }
        });
    });
</script>
