@model List<Rajby_web.Models.PreCostingViewModel>

@{
	ViewData["Title"] = "Costing";
}

<h4 class="text-left my-4 ml-3" style="font-size: 2rem; font-weight: bold; background: linear-gradient(to right, #005796, #312b5e); -webkit-background-clip: text; color: transparent;">
	@ViewData["Title"]
</h4>

<!-- Display Success or Error Message -->
@if (TempData["Message"] != null)
{
	<div class="alert alert-success text-center">
		@TempData["Message"]
	</div>
}

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet">

<!-- Toastr CSS for Notifications -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">

<!-- Custom CSS for Styling -->
<style>

	.badge {
		font-size: 0.9rem;
		padding: 5px 10px;
	}

	.btn {
		font-size: 1rem;
		padding: 6px 12px;
	}

	.btn-success {
		background-color: #28a745;
		border-color: #28a745;
	}

	.btn-danger {
		background-color: #dc3545;
		border-color: #dc3545;
	}

		.btn-success:hover, .btn-danger:hover {
			opacity: 0.85;
		}

	.btn-group button {
		margin-right: 5px;
	}

	.table-responsive {
		overflow-x: auto; /* Handles table overflow if needed */
		padding: 0px;
	}

	.table {
		width: 100%;
		table-layout: fixed; /* Forces fixed column widths */
	}

	thead th {
		text-align: center;
		background-color: #f8f9fa;
	}

	tbody tr:hover {
		background-color: #f1f1f1;
	}

	td, th {
		text-align: left;
		vertical-align: middle;
		word-wrap: break-word; /* Ensures text breaks within cells */
		overflow: hidden; /* Hides overflow content */
	}
</style>

<!-- Modal (Bootstrap 5 with vanilla JS API) -->
<div class="modal fade" id="approvalModal" tabindex="-1" aria-labelledby="approvalModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="approvalModalLabel">Approval Action</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<!-- Start Form for Submission -->
				<form id="approvalForm">
					<div class="form-group" id="priceGroup" style="display: none;">
						<label for="priceInput">Suggested Price</label>
						<input type="number" id="priceInput" name="suggestedPrice" class="form-control" placeholder="Enter suggested price">
					</div>
					<div class="form-group">
						<label for="commentSelect">Comment</label>
						<select id="commentSelect" name="commentsId" class="form-control">
							<option value="">Select a comment</option>
							<!-- Comments will be dynamically populated here -->
						</select>
					</div>

					<!-- Hidden fields to store dynamic data -->
					<input type="hidden" id="costingId" name="costingId" />
					<input type="hidden" id="action" name="action" />
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary" id="submitApproval">Submit</button>
			</div>
		</div>
	</div>
</div>


<div class="table-responsive">
	<table class="table table-hover table-bordered table-striped" id="mytable">
		<thead class="thead-light">
			<tr>
				<th style="width: 15%;">Costing Number</th>
				<th style="width: 10%;">Date</th>
				<th style="width: 15%;">Buyer Name</th>
				<th style="width: 15%;">Article Code</th>
				<th style="width: 7%;">Min Price</th>
				<th style="width: 7%;">Sell Price</th>
				<th style="width: 15%;">Merchandiser</th>
				<th style="width: 15%;">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr id="costing-@item.CostingId">
					<td>
						<a href="http://192.168.77.34/Report/Download_PDF?tranId=@item.CostingId" target="_blank">
							@item.CostingNumber
						</a>
					</td>
					<td>@item.CostingDate.ToString("dd-MM-yyyy")</td>
					<td>@item.BuyerName</td>
					<td>@item.ArticleCode</td>
					<td>$ @item.MinExpectedPrice</td>
					<td>$ @item.SellPrice</td>
					<td>@item.CreatedBy</td>
					<td>
						@if (item.ApprovalStatus == "Requested")
						{
							<div class="btn-group" role="group">
								<button class="btn btn-success" onclick="openApprovalModal(@item.CostingId, 'Accept')">Accept</button>
								<button class="btn btn-danger" onclick="submitApprovalAction(@item.CostingId, 'Reject')">Reject</button>
							</div>
						}
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>


<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<!-- Toastr JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

<!-- Bootstrap JS (ensure to include this) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!-- DataTables Initialization -->
<script>
	$(document).ready(function () {
		var $j = jQuery.noConflict();
		$('#mytable').DataTable({
			responsive: true
		});
	});

	// Function to handle actions directly (e.g., Reject)
	function submitApprovalAction(costingId, action) {
		var data = {
			costingId: costingId,
			action: action,
			approvedPrice: null, // Not required for "Reject"
			commentsId: null // Not required for "Reject"
		};

		$.ajax({
			url: '@Url.Action("UpdateApprovalStatus", "Precosting")',
			type: 'POST',
			data: data,
			success: function (response) {
				if (response.success) {
					toastr.success(response.message);
					$('#costing-' + costingId).fadeOut(500, function () {
						$(this).remove();
					});
				} else {
					toastr.error(response.message);
				}
			},
			error: function (xhr, status, error) {
				toastr.error('An error occurred: ' + error);
			}
		});
	}

	// Function to open the approval modal for "Accept" action
	function openApprovalModal(costingId, action) {
		$('#commentSelect').val('');
		$('#priceInput').val('');
		$('#priceGroup').show(); // Price and comment are required for "Accept"

		$('#costingId').val(costingId); // Set costing ID in hidden field
		$('#action').val(action); // Set action type in hidden field
		loadApprovalComments()
		var modal = new bootstrap.Modal(document.getElementById('approvalModal'));
		modal.show();
	}

	// Load approval comments dynamically
	function loadApprovalComments() {
		$.ajax({
			url: '@Url.Action("GetApprovalComments", "Precosting")',
			type: 'GET',
			success: function (comments) {
				var $commentSelect = $('#commentSelect');
				$commentSelect.empty();
				$commentSelect.append('<option value="">Select a comment</option>');

				comments.forEach(function (comment) {
					$commentSelect.append(`<option value="${comment.setsetupId}">${comment.setsetupName}</option>`);
				});
			},
			error: function (xhr, status, error) {
				toastr.error('Failed to load comments: ' + error);
			}
		});
	}

	// Handle approval modal submission
	$('#submitApproval').click(function (e) {
		e.preventDefault();

		var costingId = $('#costingId').val();
		var action = $('#action').val();
		var approvedPrice = $('#priceInput').val();
		var commentsId = $('#commentSelect').val();

		

		var data = {
			costingId: costingId,
			action: action,
			approvedPrice: action === 'Accept' ? parseFloat(approvedPrice) : null,
			commentsId: action === 'Accept' ? parseInt(commentsId) : null
		};

		$.ajax({
			url: '@Url.Action("UpdateApprovalStatus", "Precosting")',
			type: 'POST',
			data: data,
			success: function (response) {
				if (response.success) {
					toastr.success(response.message);
					$('#costing-' + costingId).fadeOut(500, function () {
						$(this).remove();
					});
					var modal = bootstrap.Modal.getInstance(document.getElementById('approvalModal'));
					modal.hide();
				} else {
					toastr.error(response.message);
				}
			},
			error: function (xhr, status, error) {
				toastr.error('An error occurred: ' + error);
			}
		});
	});
</script>
