<div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
	<!-- User's Name Visible on Mobile & Desktop -->
	<div class="navbar-nav align-items-center">
		<div class="nav-item d-flex align-items-center">
			<!-- Display logged-in user's name for large screens only -->
			<span class="fw-bold me-2 d-xl-inline-block d-none"
				  style="font-size: 1.2rem; color: #2F3A46; font-family: 'Roboto', sans-serif; letter-spacing: 0.5px;">
				Welcome back, @User.Identity.Name!
			</span>
			<!-- Display logged-in user's name for small screens (mobile) -->
			<span class="fw-bold me-2 d-xl-none"
				  style="font-size: 1rem; color: #2F3A46; font-family: 'Roboto', sans-serif; letter-spacing: 0.5px;">
				Welcome, @User.Identity.Name!
			</span>
		</div>
	</div>

	<ul class="navbar-nav flex-row align-items-center ms-auto">
		<!-- User -->
		<li class="nav-item navbar-dropdown dropdown-user dropdown">
			<a class="nav-link dropdown-toggle hide-arrow p-0" href="javascript:void(0);" data-bs-toggle="dropdown">
				<i class="bx bx-user-circle" style="font-size: 38px; color: black;"></i>
			</a>
			<ul class="dropdown-menu dropdown-menu-end">
				<li>
					<div class="dropdown-divider my-1"></div>
				</li>
				<a class="dropdown-item" href="javascript:void(0);" onclick="logout()">
					<i class="bx bx-power-off bx-md me-2"></i>
					<span>Log Out</span>
				</a>

				<script>
					function logout() {
						// Send a GET request to the Logout action
						fetch('/Auth/Logout', {
							method: 'GET',
							credentials: 'same-origin'
						})
						.then(response => {
							if (response.ok) {
								// Redirect to login page after successful logout
								window.location.href = '/Auth/LoginBasic';
							} else {
								console.error('Failed to log out');
							}
						})
						.catch(error => {
							console.error('Error:', error);
						});
					}
				</script>
			</ul>
		</li>
	</ul>
</div>
