    <!-- Custom JavaScript to handle the toggling of dropdowns in sidebar -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Add event listener to toggle dropdown visibility
            document.getElementById("costingDropdownToggle").addEventListener("click", function (e) {
                e.preventDefault(); // Prevent default link behavior
                var dropdownMenu = document.querySelector("#costingDropdown .dropdown-menu");
                toggleDropdown(dropdownMenu);
            });

            document.getElementById("requisitionDropdownToggle").addEventListener("click", function (e) {
                e.preventDefault(); // Prevent default link behavior
                var dropdownMenu = document.querySelector("#requisitionDropdown .dropdown-menu");
                toggleDropdown(dropdownMenu);
            });

            function toggleDropdown(dropdownMenu) {
                // Toggle the dropdown visibility by changing display
                if (dropdownMenu.style.display === "block") {
                    dropdownMenu.style.display = "none";
                } else {
                    dropdownMenu.style.display = "block";
                }
            }
        });
    </script>













